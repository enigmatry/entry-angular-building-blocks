{
  "name": "@enigmatry/scss-entry",
  "version": "1.0.0",
  "author": "Enigmatry",
  "description": "Collection of SCSS utilities used to reduce duplication across entry components.",
  "homepage": "https://github.com/enigmatry/entry-angular-building-blocks/tree/master/libs/scss-entry#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/enigmatry/entry-angular-building-blocks.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "sass --style=compressed --load-path=src src/partials/main.scss dist/scss-entry.css",
    "build-modules": "sass --style=compressed --load-path=src src/modules/_index.scss dist/scss-entry-modules.css",
    "lint": "stylelint --fix src/**/*.scss"
  },
  "devDependencies": {
    "@enigmatry/stylelint-config": "1.14.15",
    "sass": "1.63.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
